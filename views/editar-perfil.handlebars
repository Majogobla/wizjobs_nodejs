<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>

            <input value="{{nombre}}" type="text" name="nombre" placeholder="Tu Nombre">
        </div>

        <div class="campo">
            <label>Correo</label>

            <input value="{{email}}" type="email" name="email" placeholder="Tu Correo">
        </div>

        <div class="campo">
            <label>Contraseña</label>

            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>

        <div class="campo">
            <label>Imagen</label>

            <input type="file" name="imagen" placeholder="Tu Imagen de Perfil">

            <img src="uploads/perfiles/{{imagen}}" alt="" class="admin-perfil">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>